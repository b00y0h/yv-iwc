{
  "name": "iwc-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "testing"
  ],
  "scripts": {
    "dev:lib": "pnpm --filter @ux_bob/yv-iwc build:watch",
    "dev:vite": "pnpm --filter @ux_bob/yv-iwc dev",
    "dev:test": "pnpm --filter testing dev",
    "dev:all": "concurrently -k -n ROLLUP,VITE,APP -c green,cyan,magenta \"pnpm dev:lib\" \"pnpm dev:vite\" \"pnpm dev:test\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "@yv/eslint-config-core": "^5",
    "typescript": "^5"
  }
}
